{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/no-extraneous-dependencies": 0,
        "no-console": 1,
        "no-underscore-dangle": 0,
        "no-restricted-globals": 0,
        "linebreak-style": 0
    },
    "overrides": [
        {
            "files": ["tests/**/*.test.js", "tests/**/*.js", "e2e/**/*.test.js"],
            "rules": {
                "no-undef": "off",
                "import/prefer-default-export": "off"
            }
        }
    ]
}
